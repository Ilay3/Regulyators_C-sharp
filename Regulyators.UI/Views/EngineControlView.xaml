<UserControl 
    x:Class="Regulyators.UI.Views.EngineControlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Regulyators.UI.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d" 
    d:DesignHeight="850" d:DesignWidth="1360"
    Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,8">
            <TextBlock 
                Text="УПРАВЛЕНИЕ ДВИГАТЕЛЕМ" 
                Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                Foreground="{DynamicResource PrimaryHueMidBrush}"
                Margin="0,0,0,2"/>
            <TextBlock 
                Text="Управление параметрами и режимами работы двигателя"
                Style="{StaticResource MaterialDesignBody2TextBlock}"
                Opacity="0.6"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Controls -->
            <materialDesign:Card 
                Grid.Column="0" 
                Margin="0,0,6,0"
                Background="{DynamicResource MaterialDesignCardBackground}"
                Padding="8"
                UniformCornerRadius="4">
                <StackPanel>
                    <!-- Engine Mode -->
                    <materialDesign:Card
                        Background="{DynamicResource MaterialDesignBackground}"
                        UniformCornerRadius="2"
                        Margin="0,0,0,8"
                        Padding="8">
                        <StackPanel>
                            <TextBlock 
                                Text="Режим работы" 
                                Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                Margin="0,0,0,6"/>

                            <WrapPanel>
                                <RadioButton 
                                    Content="ОСТАНОВКА" 
                                    IsChecked="{Binding IsEngineStop}"
                                    Command="{Binding SetEngineModeCommand}"
                                    CommandParameter="Stop"
                                    Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineRadioButton}"
                                    Margin="0,0,8,0"/>

                                <RadioButton 
                                    Content="РАБОТА" 
                                    IsChecked="{Binding IsEngineRun}"
                                    Command="{Binding SetEngineModeCommand}"
                                    CommandParameter="Run"
                                    Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineRadioButton}"/>
                            </WrapPanel>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Load Type -->
                    <materialDesign:Card
                        Background="{DynamicResource MaterialDesignBackground}"
                        UniformCornerRadius="2"
                        Margin="0,0,0,8"
                        Padding="8">
                        <StackPanel>
                            <TextBlock 
                                Text="Тип нагрузки" 
                                Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                Margin="0,0,0,6"/>

                            <WrapPanel>
                                <RadioButton 
                                    Content="Под нагрузкой" 
                                    IsChecked="{Binding IsLoaded}"
                                    Command="{Binding SetLoadTypeCommand}"
                                    CommandParameter="Loaded"
                                    Style="{StaticResource MaterialDesignChoiceChipAccentOutlineRadioButton}"
                                    Margin="0,0,8,4"/>

                                <RadioButton 
                                    Content="Холостой ход" 
                                    IsChecked="{Binding IsIdle}"
                                    Command="{Binding SetLoadTypeCommand}"
                                    CommandParameter="Idle"
                                    Style="{StaticResource MaterialDesignChoiceChipAccentOutlineRadioButton}"
                                    Margin="0,0,8,4"/>

                                <RadioButton 
                                    Content="Буксование" 
                                    IsChecked="{Binding IsSlipping}"
                                    Command="{Binding SetLoadTypeCommand}"
                                    CommandParameter="Slipping"
                                    Style="{StaticResource MaterialDesignChoiceChipAccentOutlineRadioButton}"/>
                            </WrapPanel>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Engine Speed -->
                    <materialDesign:Card
                        Background="{DynamicResource MaterialDesignBackground}"
                        UniformCornerRadius="2"
                        Margin="0,0,0,8"
                        Padding="8">
                        <StackPanel>
                            <TextBlock 
                                Text="Обороты двигателя (об/мин)" 
                                Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                Margin="0,0,0,6"/>

                            <Slider 
                                Minimum="0" 
                                Maximum="2400" 
                                Value="{Binding EngineControl.TargetEngineSpeed}"
                                TickFrequency="100"
                                TickPlacement="BottomRight"
                                IsSnapToTickEnabled="True"
                                Style="{StaticResource MaterialDesignDiscreteSlider}"
                                Margin="0,4"/>

                            <Grid Margin="0,4,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox 
                                    Grid.Column="0"
                                    Text="{Binding EngineControl.TargetEngineSpeed, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    materialDesign:HintAssist.Hint="Обороты"
                                    Margin="0,0,8,0"
                                    Height="Auto"/>

                                <Button 
                                    Grid.Column="1"
                                    Content="Установить" 
                                    Command="{Binding SetEngineSpeedCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Rack Position -->
                    <materialDesign:Card
                        Background="{DynamicResource MaterialDesignBackground}"
                        UniformCornerRadius="2"
                        Margin="0,0,0,8"
                        Padding="8">
                        <StackPanel>
                            <TextBlock 
                                Text="Положение рейки (0.00-30.00)" 
                                Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                Margin="0,0,0,6"/>

                            <Slider 
                                Minimum="0" 
                                Maximum="30" 
                                Value="{Binding EngineControl.RackPosition}"
                                TickFrequency="1"
                                TickPlacement="BottomRight"
                                Style="{StaticResource MaterialDesignDiscreteSlider}"
                                Margin="0,4"/>

                            <Grid Margin="0,4,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox 
                                    Grid.Column="0"
                                    Text="{Binding EngineControl.RackPosition, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    materialDesign:HintAssist.Hint="Положение"
                                    Margin="0,0,8,0"
                                    Height="Auto"/>

                                <Button 
                                    Grid.Column="1"
                                    Content="Установить" 
                                    Command="{Binding SetRackPositionCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>
                </StackPanel>
            </materialDesign:Card>

            <!-- Right Panel - Status and Quick Actions -->
            <materialDesign:Card 
                Grid.Column="1" 
                Margin="6,0,0,0"
                Background="{DynamicResource MaterialDesignCardBackground}"
                Padding="8"
                UniformCornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Quick Actions -->
                    <materialDesign:Card
                        Grid.Row="0"
                        Background="{DynamicResource MaterialDesignBackground}"
                        UniformCornerRadius="2"
                        Margin="0,0,0,8"
                        Padding="8">
                        <StackPanel>
                            <TextBlock 
                                Text="Быстрые команды" 
                                Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                Margin="0,0,0,6"/>

                            <UniformGrid Columns="4" Rows="2">
                                <Button 
                                    Content="800" 
                                    Command="{Binding QuickCommandCommand}" 
                                    CommandParameter="1"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Margin="1"
                                    Padding="4"/>
                                <Button 
                                    Content="1000" 
                                    Command="{Binding QuickCommandCommand}" 
                                    CommandParameter="2"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Margin="1"
                                    Padding="4"/>
                                <Button 
                                    Content="1200" 
                                    Command="{Binding QuickCommandCommand}" 
                                    CommandParameter="3"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Margin="1"
                                    Padding="4"/>
                                <Button 
                                    Content="1400" 
                                    Command="{Binding QuickCommandCommand}" 
                                    CommandParameter="4"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Margin="1"
                                    Padding="4"/>
                                <Button 
                                    Content="1600" 
                                    Command="{Binding QuickCommandCommand}" 
                                    CommandParameter="5"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Margin="1"
                                    Padding="4"/>
                                <Button 
                                    Content="1800" 
                                    Command="{Binding QuickCommandCommand}" 
                                    CommandParameter="6"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Margin="1"
                                    Padding="4"/>
                                <Button 
                                    Content="2000" 
                                    Command="{Binding QuickCommandCommand}" 
                                    CommandParameter="7"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Margin="1"
                                    Padding="4"/>
                                <Button 
                                    Content="2200" 
                                    Command="{Binding QuickCommandCommand}" 
                                    CommandParameter="8"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Margin="1"
                                    Padding="4"/>
                            </UniformGrid>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Current Status -->
                    <materialDesign:Card
                        Grid.Row="1"
                        Background="{DynamicResource MaterialDesignBackground}"
                        UniformCornerRadius="2"
                        Margin="0,0,0,8"
                        Padding="8">
                        <StackPanel>
                            <TextBlock 
                                Text="Состояние двигателя" 
                                Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                Margin="0,0,0,8"/>

                            <!-- Engine Speed -->
                            <Grid Margin="0,2,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock 
                                    Grid.Column="0"
                                    Text="Обороты двигателя:" 
                                    Style="{StaticResource MaterialDesignBody2TextBlock}"
                                    VerticalAlignment="Center"/>

                                <TextBlock 
                                    Grid.Column="1"
                                    Text="{Binding CurrentEngineSpeed, StringFormat='{}{0:N0} об/мин'}" 
                                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                    Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                            </Grid>

                            <Separator Style="{StaticResource MaterialDesignLightSeparator}" Margin="0,2"/>

                            <!-- Engine Mode -->
                            <Grid Margin="0,4,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock 
                                    Grid.Column="0"
                                    Text="Режим работы:" 
                                    Style="{StaticResource MaterialDesignBody2TextBlock}"
                                    VerticalAlignment="Center"/>

                                <TextBlock 
                                    Grid.Column="1"
                                    Text="{Binding CurrentEngineMode}" 
                                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                    Foreground="{DynamicResource SecondaryHueMidBrush}"/>
                            </Grid>

                            <Separator Style="{StaticResource MaterialDesignLightSeparator}" Margin="0,2"/>

                            <!-- Load Type -->
                            <Grid Margin="0,4,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock 
                                    Grid.Column="0"
                                    Text="Тип нагрузки:" 
                                    Style="{StaticResource MaterialDesignBody2TextBlock}"
                                    VerticalAlignment="Center"/>

                                <TextBlock 
                                    Grid.Column="1"
                                    Text="{Binding CurrentLoadType}" 
                                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                    Foreground="{DynamicResource SecondaryHueMidBrush}"/>
                            </Grid>

                            <Separator Style="{StaticResource MaterialDesignLightSeparator}" Margin="0,2"/>

                            <!-- Rack Position -->
                            <Grid Margin="0,4,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock 
                                    Grid.Column="0"
                                    Text="Положение рейки:" 
                                    Style="{StaticResource MaterialDesignBody2TextBlock}"
                                    VerticalAlignment="Center"/>

                                <TextBlock 
                                    Grid.Column="1"
                                    Text="{Binding CurrentRackPosition, StringFormat='{}{0:N2}'}" 
                                    Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                    Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                            </Grid>

                            <Separator Style="{StaticResource MaterialDesignLightSeparator}" Margin="0,2"/>

                            <!-- Protection Status -->
                            <Grid Margin="0,4,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock 
                                    Grid.Column="0"
                                    Text="Статус защиты:" 
                                    Style="{StaticResource MaterialDesignBody2TextBlock}"
                                    VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Ellipse
                                        Width="12" 
                                        Height="12" 
                                        Fill="{Binding ProtectionStatusColor}" 
                                        Margin="0,0,4,0"
                                        VerticalAlignment="Center"/>

                                    <TextBlock 
                                        Text="{Binding ProtectionStatus}" 
                                        Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                        VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Main Control Buttons -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button 
                            Grid.Column="0"
                            Content="ПУСК" 
                            Command="{Binding StartEngineCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="2"
                            Foreground="White"
                            Background="ForestGreen"
                            BorderBrush="ForestGreen"
                            Height="40"
                            Margin="0,0,4,0"/>

                        <Button 
                            Grid.Column="1"
                            Content="ОСТАНОВКА" 
                            Command="{Binding StopEngineCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="2"
                            Foreground="White"
                            Background="Crimson"
                            BorderBrush="Crimson"
                            Height="40"
                            Margin="4,0,0,0"/>
                    </Grid>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>