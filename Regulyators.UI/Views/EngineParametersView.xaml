<UserControl 
    x:Class="Regulyators.UI.Views.EngineParametersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Regulyators.UI.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d" 
    d:DesignHeight="850" d:DesignWidth="1360"
    Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,8">
            <TextBlock 
                Text="ПАРАМЕТРЫ ДВИГАТЕЛЯ" 
                Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                Foreground="{DynamicResource PrimaryHueMidBrush}"
                Margin="0,0,0,2"/>
            <TextBlock 
                Text="Мониторинг и контроль рабочих параметров двигателя"
                Style="{StaticResource MaterialDesignBody2TextBlock}"
                Opacity="0.6"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.35*" />
                <ColumnDefinition Width="0.65*" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Parameters Display -->
            <materialDesign:Card 
                Grid.Column="0" 
                Margin="0,0,6,0"
                Background="{DynamicResource MaterialDesignCardBackground}"
                Padding="8"
                UniformCornerRadius="4">
                <StackPanel>
                    <TextBlock 
                        Text="Текущие параметры" 
                        Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                        Margin="0,0,0,8"/>

                    <!-- Engine Speed -->
                    <materialDesign:Card
                        Background="{DynamicResource MaterialDesignBackground}"
                        UniformCornerRadius="2"
                        Margin="0,0,0,6"
                        Padding="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock 
                                    Text="Обороты двигателя" 
                                    Style="{StaticResource MaterialDesignBody2TextBlock}"
                                    Opacity="0.7"/>
                                <TextBlock 
                                    Text="{Binding EngineParameters.EngineSpeed, StringFormat='{}{0:N0}'}" 
                                    Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                    Foreground="{Binding EngineSpeedCriticalColor}"/>
                            </StackPanel>

                            <TextBlock 
                                Grid.Column="1"
                                Text="об/мин" 
                                Style="{StaticResource MaterialDesignBody2TextBlock}"
                                VerticalAlignment="Bottom"
                                Margin="0,0,0,2"
                                Opacity="0.7"/>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Turbo Speed -->
                    <materialDesign:Card
                        Background="{DynamicResource MaterialDesignBackground}"
                        UniformCornerRadius="2"
                        Margin="0,0,0,6"
                        Padding="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock 
                                    Text="Обороты турбокомпрессора" 
                                    Style="{StaticResource MaterialDesignBody2TextBlock}"
                                    Opacity="0.7"/>
                                <TextBlock 
                                    Text="{Binding EngineParameters.TurboCompressorSpeed, StringFormat='{}{0:N0}'}" 
                                    Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                            </StackPanel>

                            <TextBlock 
                                Grid.Column="1"
                                Text="об/мин" 
                                Style="{StaticResource MaterialDesignBody2TextBlock}"
                                VerticalAlignment="Bottom"
                                Margin="0,0,0,2"
                                Opacity="0.7"/>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Oil Pressure -->
                    <materialDesign:Card
                        Background="{DynamicResource MaterialDesignBackground}"
                        UniformCornerRadius="2"
                        Margin="0,0,0,6"
                        Padding="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock 
                                    Text="Давление масла" 
                                    Style="{StaticResource MaterialDesignBody2TextBlock}"
                                    Opacity="0.7"/>
                                <TextBlock 
                                    Text="{Binding EngineParameters.OilPressure, StringFormat='{}{0:N2}'}" 
                                    Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                    Foreground="{Binding OilPressureColor}"/>
                            </StackPanel>

                            <TextBlock 
                                Grid.Column="1"
                                Text="кг/см²" 
                                Style="{StaticResource MaterialDesignBody2TextBlock}"
                                VerticalAlignment="Bottom"
                                Margin="0,0,0,2"
                                Opacity="0.7"/>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Boost Pressure -->
                    <materialDesign:Card
                        Background="{DynamicResource MaterialDesignBackground}"
                        UniformCornerRadius="2"
                        Margin="0,0,0,6"
                        Padding="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock 
                                    Text="Давление наддува" 
                                    Style="{StaticResource MaterialDesignBody2TextBlock}"
                                    Opacity="0.7"/>
                                <TextBlock 
                                    Text="{Binding EngineParameters.BoostPressure, StringFormat='{}{0:N2}'}" 
                                    Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                    Foreground="{Binding BoostPressureColor}"/>
                            </StackPanel>

                            <TextBlock 
                                Grid.Column="1"
                                Text="кг/см²" 
                                Style="{StaticResource MaterialDesignBody2TextBlock}"
                                VerticalAlignment="Bottom"
                                Margin="0,0,0,2"
                                Opacity="0.7"/>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Oil Temperature -->
                    <materialDesign:Card
                        Background="{DynamicResource MaterialDesignBackground}"
                        UniformCornerRadius="2"
                        Margin="0,0,0,6"
                        Padding="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock 
                                    Text="Температура масла" 
                                    Style="{StaticResource MaterialDesignBody2TextBlock}"
                                    Opacity="0.7"/>
                                <TextBlock 
                                    Text="{Binding EngineParameters.OilTemperature, StringFormat='{}{0:N1}'}" 
                                    Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                    Foreground="{Binding OilTemperatureColor}"/>
                            </StackPanel>

                            <TextBlock 
                                Grid.Column="1"
                                Text="°C" 
                                Style="{StaticResource MaterialDesignBody2TextBlock}"
                                VerticalAlignment="Bottom"
                                Margin="0,0,0,2"
                                Opacity="0.7"/>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Rack Position -->
                    <materialDesign:Card
                        Background="{DynamicResource MaterialDesignBackground}"
                        UniformCornerRadius="2"
                        Margin="0,0,0,0"
                        Padding="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock 
                                    Text="Положение рейки" 
                                    Style="{StaticResource MaterialDesignBody2TextBlock}"
                                    Opacity="0.7"/>
                                <TextBlock 
                                    Text="{Binding EngineParameters.RackPosition, StringFormat='{}{0:N2}'}" 
                                    Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                </StackPanel>
            </materialDesign:Card>

            <!-- Right Panel - Protection and Graph -->
            <Grid Grid.Column="1" Margin="6,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Protection Systems -->
                <materialDesign:Card 
                    Grid.Row="0"
                    Margin="0,0,0,6"
                    Background="{DynamicResource MaterialDesignCardBackground}"
                    Padding="8"
                    UniformCornerRadius="4">
                    <StackPanel>
                        <TextBlock 
                            Text="Системы защиты" 
                            Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                            Margin="0,0,0,8"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Oil Pressure Protection -->
                            <materialDesign:Card
                                Grid.Row="0"
                                Grid.Column="0"
                                Background="{DynamicResource MaterialDesignBackground}"
                                UniformCornerRadius="2"
                                Margin="0,0,2,2"
                                Padding="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock 
                                        Grid.Column="0"
                                        Text="Давление масла" 
                                        Style="{StaticResource MaterialDesignBody2TextBlock}"
                                        VerticalAlignment="Center"/>

                                    <Ellipse 
                                        Grid.Column="1"
                                        Width="12" 
                                        Height="12" 
                                        Fill="{Binding OilPressureCriticalColor}"/>
                                </Grid>
                            </materialDesign:Card>

                            <!-- Engine Speed Protection -->
                            <materialDesign:Card
                                Grid.Row="0"
                                Grid.Column="1"
                                Background="{DynamicResource MaterialDesignBackground}"
                                UniformCornerRadius="2"
                                Margin="2,0,0,2"
                                Padding="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock 
                                        Grid.Column="0"
                                        Text="Обороты двигателя" 
                                        Style="{StaticResource MaterialDesignBody2TextBlock}"
                                        VerticalAlignment="Center"/>

                                    <Ellipse 
                                        Grid.Column="1"
                                        Width="12" 
                                        Height="12" 
                                        Fill="{Binding EngineSpeedCriticalColor}"/>
                                </Grid>
                            </materialDesign:Card>

                            <!-- Boost Pressure Protection -->
                            <materialDesign:Card
                                Grid.Row="1"
                                Grid.Column="0"
                                Background="{DynamicResource MaterialDesignBackground}"
                                UniformCornerRadius="2"
                                Margin="0,2,2,0"
                                Padding="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock 
                                        Grid.Column="0"
                                        Text="Давление наддува" 
                                        Style="{StaticResource MaterialDesignBody2TextBlock}"
                                        VerticalAlignment="Center"/>

                                    <Ellipse 
                                        Grid.Column="1"
                                        Width="12" 
                                        Height="12" 
                                        Fill="{Binding BoostPressureCriticalColor}"/>
                                </Grid>
                            </materialDesign:Card>

                            <!-- Oil Temperature Protection -->
                            <materialDesign:Card
                                Grid.Row="1"
                                Grid.Column="1"
                                Background="{DynamicResource MaterialDesignBackground}"
                                UniformCornerRadius="2"
                                Margin="2,2,0,0"
                                Padding="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock 
                                        Grid.Column="0"
                                        Text="Температура масла" 
                                        Style="{StaticResource MaterialDesignBody2TextBlock}"
                                        VerticalAlignment="Center"/>

                                    <Ellipse 
                                        Grid.Column="1"
                                        Width="12" 
                                        Height="12" 
                                        Fill="{Binding OilTemperatureCriticalColor}"/>
                                </Grid>
                            </materialDesign:Card>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Graph -->
                <materialDesign:Card 
                    Grid.Row="1"
                    Margin="0,6,0,0"
                    Background="{DynamicResource MaterialDesignCardBackground}"
                    Padding="8"
                    UniformCornerRadius="4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DockPanel Grid.Row="0" LastChildFill="False">
                            <TextBlock 
                                DockPanel.Dock="Left"
                                Text="График параметров" 
                                Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>

                            <WrapPanel DockPanel.Dock="Right">
                                <CheckBox 
                                    Content="Обороты" 
                                    IsChecked="{Binding ShowEngineSpeed}"
                                    Style="{StaticResource MaterialDesignCheckBox}"
                                    Margin="0,0,6,0"/>

                                <CheckBox 
                                    Content="Давление масла" 
                                    IsChecked="{Binding ShowOilPressure}"
                                    Style="{StaticResource MaterialDesignCheckBox}"
                                    Margin="0,0,6,0"/>

                                <CheckBox 
                                    Content="Температура масла" 
                                    IsChecked="{Binding ShowOilTemperature}"
                                    Style="{StaticResource MaterialDesignCheckBox}"/>
                            </WrapPanel>
                        </DockPanel>

                        <Border 
                            Grid.Row="1"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            BorderThickness="1"
                            Margin="0,4"
                            CornerRadius="2">
                            <WpfPlot 
                                x:Name="ParametersPlot"/>
                        </Border>

                        <DockPanel Grid.Row="2" LastChildFill="False">
                            <ComboBox 
                                DockPanel.Dock="Left"
                                ItemsSource="{Binding TimeIntervals}"
                                SelectedItem="{Binding SelectedTimeInterval, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                materialDesign:HintAssist.Hint="Интервал"
                                Width="100"
                                Height="32">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                <Button 
                                    Content="Очистить" 
                                    Command="{Binding ClearGraphCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Margin="0,0,4,0"
                                    Height="32"/>

                                <Button 
                                    Content="Экспорт" 
                                    Command="{Binding ExportGraphCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Height="32"/>
                            </StackPanel>
                        </DockPanel>
                    </Grid>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </Grid>
</UserControl>